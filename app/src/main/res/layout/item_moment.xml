<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="16dp"
        android:background="@drawable/list_item_background">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/avatar_imageView"
        android:src="@drawable/image1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMYUIHYJJIUIUIUTID"
        android:id="@+id/userName_textView"
        android:textColor="@color/theme_color"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_alignTop="@+id/avatar_imageView"
        android:layout_toRightOf="@+id/avatar_imageView"
        android:layout_toEndOf="@+id/avatar_imageView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/pic_imageView"
        android:layout_below="@+id/avatar_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tu3"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="I got cake! Who want to come over?"
        android:id="@+id/comment_textView"
        android:layout_below="@+id/pic_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:id="@+id/heart_imageView"
        android:src="@drawable/phone"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/comment_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:id="@+id/comment_imageView"
        android:src="@drawable/mail"
        android:layout_alignBottom="@+id/heart_imageView"
        android:layout_toRightOf="@+id/heart_imageView" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:id="@+id/more_imageView"
        android:src="@drawable/more_icon"
        android:layout_alignBottom="@+id/comment_imageView"
        android:layout_toRightOf="@+id/comment_imageView" />

    <TextSwitcher
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/favorIcon_imageView"
        android:layout_marginRight="24dp"
        android:text="12 likes"
        android:textColor="@color/theme_color"
        android:id="@+id/favorNo_textView"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/favorIcon_imageView"
        android:src="@drawable/phone"
        android:layout_below="@+id/comment_textView"
        android:layout_toLeftOf="@+id/favorNo_textView"
        android:layout_toStartOf="@+id/favorNo_textView"
        android:layout_marginRight="4dp"/>
    </RelativeLayout>


</RelativeLayout>